<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/black" >

    <Button
        android:id="@+id/bmi_scale"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/about_bmi"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="52dp"
        android:background="@drawable/button1"
        android:text="BMI Scale"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/bmi_scale"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="44dp"
        android:scaleType="fitXY"
        android:src="@drawable/green_bar_h" />

    <Button
        android:id="@+id/bmi_calculator"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button1"
        android:text="BMI Calculator"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/about_bmi"
        android:layout_marginTop="44dp"
        android:scaleType="fitXY"
        android:src="@drawable/green_bar_h" />

    <Button
        android:id="@+id/about_bmi"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/button1"
        android:text="About BMI?"
        android:textSize="40sp" />

"

</RelativeLayout>
